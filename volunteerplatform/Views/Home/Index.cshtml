@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="hero-title">
                    Empowering Communities Through <span class="text-primary-custom">Volunteering</span>
                </h1>
                <p class="hero-subtitle">
                    Join thousands of volunteers making a difference. Find initiatives that match your skills and passion.
                </p>
                <div class="d-flex gap-3">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-5">Get Started</a>
                    <a href="#how-it-works" class="btn btn-outline-dark btn-lg px-5" style="border-radius: 50px;">Learn More</a>
                </div>
            </div>
            <div class="col-lg-6 text-center mt-5 mt-lg-0">
                <!-- Placeholder for Hero Image -->
                <img src="https://images.unsplash.com/photo-1559027615-cd4628902d4a?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" 
                     alt="Volunteers High Fiving" 
                     class="img-fluid rounded-4 shadow-lg" 
                     style="max-height: 400px; object-fit: cover;">
            </div>
        </div>
    </div>
</section>

<!-- Features / Call to Action -->
<div class="container my-5" id="how-it-works">
    <div class="row text-center mb-5">
        <div class="col-lg-8 mx-auto">
            <h2 class="section-title">How It Works</h2>
            <p class="lead text-muted">A simple path to making a big impact.</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <a asp-controller="Initiatives" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card h-100 p-4 text-center">
                    <div class="card-body">
                        <div class="feature-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                            </svg>
                        </div>
                        <h3 class="h4 mb-3">Find Initiatives</h3>
                        <p class="text-muted">Browse through hundreds of volunteering opportunities in your area or remotely.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Account" asp-action="Register" class="text-decoration-none text-dark">
                <div class="card h-100 p-4 text-center">
                    <div class="card-body">
                        <div class="feature-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                                <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4 1 1 1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                                <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                            </svg>
                        </div>
                        <h3 class="h4 mb-3">Join a Team</h3>
                        <p class="text-muted">Sign up and become part of a dedicated team working towards a common goal.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Enrolments" asp-action="MyApplications" class="text-decoration-none text-dark">
                <div class="card h-100 p-4 text-center">
                    <div class="card-body">
                        <div class="feature-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-graph-up-arrow" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M0 0h1v15h15v1H0V0Zm10 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-1 0V4.9l-3.613 4.417a.5.5 0 0 1-.74.037L7.06 6.767l-3.656 5.027a.5.5 0 0 1-.808-.588l4-5.5a.5.5 0 0 1 .758-.06l2.609 2.61L13.445 4H10.5a.5.5 0 0 1-.5-.5Z"/>
                            </svg>
                        </div>
                        <h3 class="h4 mb-3">Track Impact</h3>
                        <p class="text-muted">See the difference you make with detailed reports and activity history.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="bg-red py-5 mt-5">
    <div class="container">
        <div class="row text-center text-white">
            <div class="col-md-3 mb-4 mb-md-0">
                <div class="display-4 fw-bold">50+</div>
                <div>Initiatives</div>
            </div>
            <div class="col-md-3 mb-4 mb-md-0">
                <div class="display-4 fw-bold">1200+</div>
                <div>Volunteers</div>
            </div>
            <div class="col-md-3 mb-4 mb-md-0">
                <div class="display-4 fw-bold">300</div>
                <div>Projects Completed</div>
            </div>
             <div class="col-md-3">
                <div class="display-4 fw-bold">10k+</div>
                <div>Hours Donated</div>
            </div>
        </div>
    </div>
</div>
