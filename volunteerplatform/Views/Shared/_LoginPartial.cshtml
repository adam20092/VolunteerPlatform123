@using Microsoft.AspNetCore.Identity
@using volunteerplatform.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-danger fw-bold" asp-area="" asp-controller="Admin" asp-action="Index">Admin Panel</a>
        </li>
    }
    @if (User.IsInRole("Organizer"))
    {
        <li class="nav-item">
            <a class="nav-link text-primary fw-bold" asp-area="" asp-controller="Initiatives" asp-action="MyInitiatives">My Missions</a>
        </li>
    }
    @if (User.IsInRole("Volunteer"))
    {
         <li class="nav-item">
            <a class="nav-link text-primary fw-bold" asp-area="" asp-controller="Enrolments" asp-action="MyApplications">My Applications</a>
         </li>
    }
    <li class="nav-item">
        <form  class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>
