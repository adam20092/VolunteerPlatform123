@model volunteerplatform.Models.Donation
@{
    ViewData["Title"] = "Donation Successful";
}

<div class="container mt-5 py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-4 p-5">
                <div class="mb-4">
                    <div class="display-1 text-success mb-3 animate__animated animate__bounceIn">
                        <i class="bi bi-patch-check-fill"></i>
                    </div>
                    <h2 class="fw-bold text-secondary">Thank You!</h2>
                    <p class="lead text-muted">Your donation to <strong>@Model.Initiative?.Title</strong> was processed successfully.</p>
                </div>

                <div class="bg-light rounded-4 p-4 mb-4 text-start">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Transaction ID:</span>
                        <span class="fw-bold">#DP-@Model.Id @DateTime.Now.ToString("mmss")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Amount:</span>
                        <span class="fw-bold h5 text-success mb-0">$@Model.Amount</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Date:</span>
                        <span class="fw-bold">@Model.DonatedOn.ToString("MMM dd, yyyy HH:mm")</span>
                    </div>
                </div>

                <div class="d-grid">
                    <a asp-controller="Initiatives" asp-action="Details" asp-route-id="@Model.InitiativeId" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                        Return to Mission
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
