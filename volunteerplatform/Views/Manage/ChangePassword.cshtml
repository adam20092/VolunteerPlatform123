@model volunteerplatform.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4">Account Settings</h2>
    <partial name="_StatusMessage" model="Model.StatusMessage" />

    <div class="row">
        <div class="col-md-3">
            <div class="list-group shadow-sm mb-4">
                <a asp-action="Index" class="list-group-item list-group-item-action">Profile Details</a>
                <a asp-action="ChangePassword" class="list-group-item list-group-item-action active">Password Settings</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card shadow-sm border-0 rounded-4 p-4">
                <h5 class="fw-bold mb-4">Update Password</h5>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger small"></div>
                    
                    <div class="mb-3">
                        <label asp-for="OldPassword" class="form-label fw-bold small"></label>
                        <input asp-for="OldPassword" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label fw-bold small"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label fw-bold small"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary px-5 rounded-pill shadow-sm">Update Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
