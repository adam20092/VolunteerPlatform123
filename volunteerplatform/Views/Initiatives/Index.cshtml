@using Microsoft.AspNetCore.Identity
@using volunteerplatform.Models
@inject UserManager<ApplicationUser> UserManager
@model IEnumerable<volunteerplatform.Models.Initiative>

@{
    ViewData["Title"] = "Initiatives";
    var currentUser = await UserManager.GetUserAsync(User);
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold text-secondary">Volunteering Opportunities</h1>
        @if (User.IsInRole("Organizer") || User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary shadow-sm"><i class="bi bi-plus-lg me-2"></i>Create New Mission</a>
        }
    </div>

    <div class="row mb-5 justify-content-center">
        <div class="col-md-8">
            <form asp-action="Index" method="get">
                <div class="input-group input-group-lg shadow-sm rounded-pill overflow-hidden border">
                    <span class="input-group-text bg-white border-0 ps-4"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" name="searchString" class="form-control border-0 py-3 no-focus" placeholder="Search by title, location or description..." value="@ViewData["CurrentFilter"]">
                    <button class="btn btn-primary px-4" type="submit">Search</button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
            {
                <div class="mt-2 text-center">
                    <a asp-action="Index" class="text-decoration-none small text-muted"><i class="bi bi-x-circle me-1"></i> Clear search results</a>
                </div>
            }
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                             <div>
                                <span class="badge bg-danger rounded-pill">@item.Status</span>
                                @if (item.TargetAmount > 0)
                                {
                                    <span class="badge bg-success rounded-pill ml-1"><i class="bi bi-heart-fill me-1"></i>Fundraising</span>
                                }
                             </div>
                             <small class="text-muted"><i class="bi bi-calendar-event me-1"></i> @item.DateAndTime.ToString("MMM dd, yyyy")</small>
                        </div>
                       
                        <h5 class="card-title fw-bold my-3">@item.Title</h5>
                        <p class="card-text text-muted mb-3">@item.Description?.Substring(0, Math.Min(item.Description.Length, 100))...</p>
                        
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-geo-alt text-primary me-2"></i>
                            <span class="small">@item.Location</span>
                        </div>

                        <div class="d-flex align-items-center text-muted small mb-4">
                             <i class="bi bi-people me-2"></i> Needed: @item.RequiredVolunteers
                        </div>

                    </div>
                    <div class="card-footer bg-white border-0 pb-4 pt-0">
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary flex-grow-1 rounded-pill">View Details</a>
                            @if (currentUser != null && (item.OrganizerId == currentUser.Id || User.IsInRole("Admin")))
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger rounded-pill"><i class="bi bi-trash"></i></a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
